{
  "include": ["**/*.ts", "package.json"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM.Iterable"],
    "target": "ES2020",
    "module": "CommonJS",
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "rootDir": "."
  }
}