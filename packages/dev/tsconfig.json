{
  "include": ["**/*.ts", "package.json"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "ESNext"],
    "target": "es2022",
    "module": "nodenext",
    // "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/",
    "paths": {
      "~/*": ["compiler/*"]
    }
  }
}
