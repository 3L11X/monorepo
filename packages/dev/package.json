{
  "name": "@remix-pwa/dev",
  "version": "0.0.1",
  "description": "An ESbuild compiler for Service Worker on Remix.run",
  "repository": {
    "type": "git",
    "url": "git@github.com:remix-pwa/monorepo",
    "directory": "packages/dev"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node compiler/compiler.ts --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "TIMING=1 eslint --fix src/",
    "test": "cross-env jest --preset ts-jest/presets/default-esm --env=node --colors"
  },
  "dependencies": {
    "@remix-pwa/worker-runtime": "^0.0.1",
    "@remix-run/dev": "^1.19.2",
    "esbuild": "^0.18.19",
    "inquirer": "^8.2.6",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.3",
    "cross-env": "^7.0.3",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
